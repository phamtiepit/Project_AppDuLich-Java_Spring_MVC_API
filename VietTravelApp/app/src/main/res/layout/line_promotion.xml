<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:background="@color/nen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:layout_height="200dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagePromotion"
                android:scaleType="fitXY"
                android:layout_width="220dp"
                android:layout_height="140dp"
                android:src="@mipmap/ic_launcher" />
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right"
                android:src="@drawable/sale2"></ImageView>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingTop="2dp"
        android:id="@+id/txtvNameTour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="20dp"
        android:layout_marginLeft="10dp"
        android:text="TÃªn Tour: "
        android:textColor="@color/red"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>
    <TextView
        android:paddingTop="2dp"
        android:id="@+id/txtvUuDai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="20dp"
        android:layout_marginLeft="10dp"
        android:text="Uu dai: "
        android:textColor="@color/red"
        android:textSize="10dp"
        android:textStyle="italic"></TextView>
    <TextView
        android:paddingTop="2dp"
        android:id="@+id/txtvGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="20dp"
        android:layout_marginLeft="10dp"
        android:text="Chi Phi: "
        android:textColor="@color/red"
        android:textSize="10dp"
        android:textStyle="italic"></TextView>

</LinearLayout>