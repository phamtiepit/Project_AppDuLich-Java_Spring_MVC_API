<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddTourAdminActivity"
    android:background="@drawable/bg2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <TextView
            android:paddingTop="5dp"
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Tour Mới"
            android:paddingBottom="5dp"
            android:textColor="@color/red"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Mã Loại Tour">
        </TextView>
        <EditText
            android:id="@+id/edtMaLoaiTour"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Mã Ưu Đãi">
        </TextView>
        <EditText
            android:id="@+id/edtMaUuDai"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Tên Tour">
        </TextView>
        <EditText
            android:id="@+id/edtTenTour"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Điểm Đi">
        </TextView>
        <EditText
            android:id="@+id/edtDiemDi"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Điểm Đến">
        </TextView>
        <EditText
            android:id="@+id/edtDiemDen"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Thời gian đi">
        </TextView>
        <EditText
            android:id="@+id/edtTgDi"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Thời gian về">
        </TextView>
        <EditText
            android:id="@+id/edtTgVe"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Mô Tả">
        </TextView>
        <EditText
            android:id="@+id/edtMoTa"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Ảnh">
        </TextView>
        <EditText
            android:id="@+id/edtAnh"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Giá">
        </TextView>
        <EditText
            android:id="@+id/edtGia"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnThemTour"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:text="Thêm Mới" />
    </LinearLayout>
</LinearLayout>